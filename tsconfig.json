{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ]
    },
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "jsxImportSource": "react"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}