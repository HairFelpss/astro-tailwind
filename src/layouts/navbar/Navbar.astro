---
import NavLink from "./navLink/NavLink.astro";
import LinkAsButton from "@components/navButton/linkAsButton/LinkAsButton.astro";
import OpenSideNavigator from "@components/navButton/OpenSideNavigator.astro";
import Svg from "@components/Svg/Svg.astro";
import SvgPath from "@components/Svg/Path.astro";

import logo from "../../images/svg/logo-no-background.svg";

export interface Props {}

const {} = Astro.props;
---

<header aria-label="Site Header" class="border-b border-gray-100">
  <div
    class="mx-auto flex h-16 max-w-screen-2xl items-center justify-between sm:px-6 lg:px-8"
  >
    <div class="flex items-center gap-4">
      <span class="p-2 lg:hidden">
        <OpenSideNavigator
          title="cart"
          drawer="drawer-left-example"
          placement="left"
        >
          <Svg
            className="w-6 h-6 dark:text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <SvgPath
              linecap="round"
              linejoin="round"
              width="1"
              drawn="M4 6h16M4 12h16M4 18h16"
            />
          </Svg>
        </OpenSideNavigator>
      </span>

      <a href="/" class="flex">
        <img src={logo} class="h-6 mr-3 sm:h-9" alt="Flowbite Logo" />
      </a>
    </div>

    <div class="flex flex-1 items-center justify-end gap-8">
      <nav
        aria-label="Site Nav"
        class="hidden lg:flex lg:gap-4 lg:text-xs lg:font-bold lg:uppercase lg:tracking-wide lg:text-gray-500"
      >
        <NavLink url="/about">About</NavLink>

        <NavLink url="/news">News</NavLink>

        <NavLink url="/store">Store</NavLink>

        <NavLink url="/contact">Contact</NavLink>
      </nav>

      <div class="flex items-center">
        <div
          class="flex items-center divide-x divide-gray-100 border-x border-gray-100"
        >
          <span>
            <OpenSideNavigator
              title="cart"
              drawer="drawer-right-example"
              placement="right"
            >
              <Svg
                className="w-6 h-6 dark:text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <SvgPath
                  linecap="round"
                  linejoin="round"
                  width="1"
                  drawn="M13.5 21v-7.5a.75.75 0 01.75-.75h3a.75.75 0 01.75.75V21m-4.5 0H2.36m11.14 0H18m0 0h3.64m-1.39 0V9.349m-16.5 11.65V9.35m0 0a3.001 3.001 0 003.75-.615A2.993 2.993 0 009.75 9.75c.896 0 1.7-.393 2.25-1.016a2.993 2.993 0 002.25 1.016c.896 0 1.7-.393 2.25-1.016a3.001 3.001 0 003.75.614m-16.5 0a3.004 3.004 0 01-.621-4.72L4.318 3.44A1.5 1.5 0 015.378 3h13.243a1.5 1.5 0 011.06.44l1.19 1.189a3 3 0 01-.621 4.72m-13.5 8.65h3.75a.75.75 0 00.75-.75V13.5a.75.75 0 00-.75-.75H6.75a.75.75 0 00-.75.75v3.75c0 .415.336.75.75.75z"
                />
              </Svg>
            </OpenSideNavigator>
          </span>

          <span>
            <LinkAsButton url="/signin">
              <Svg
                className="w-6 h-6 dark:text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <SvgPath
                  linecap="round"
                  linejoin="round"
                  width="1"
                  drawn="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"
                />
              </Svg>
            </LinkAsButton>
          </span>

          <span class="hidden sm:block">
            <LinkAsButton url="/search">
              <Svg
                className="w-6 h-6 dark:text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <SvgPath
                  linecap="round"
                  linejoin="round"
                  width="1"
                  drawn="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"
                />
              </Svg>
            </LinkAsButton>
          </span>
        </div>
      </div>
    </div>
  </div>
</header>
